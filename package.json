{
  "name": "programs-workshop",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "mud build",
    "clean": "forge clean && shx rm -rf src/**/codegen",
    "deploy:local": ". ./set-env.sh local && mud deploy --alwaysRunPostDeploy --profile=$FOUNDRY_PROFILE --worldAddress=$WORLD_ADDRESS",
    "deploy:redstone": ". ./set-env.sh redstone && mud deploy --alwaysRunPostDeploy --profile=$FOUNDRY_PROFILE --worldAddress=$WORLD_ADDRESS",
    "update-program:redstone": ". ./set-env.sh redstone && forge script UpdateProgram --sig='run(bytes32,bytes32,bytes)'",
    "reset-game:redstone": ". ./set-env.sh redstone && forge script ResetGame",
    "foundry:up": "curl -L https://foundry.paradigm.xyz | bash && bash $HOME/.foundry/bin/foundryup",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "mud test"
  },
  "dependencies": {
    "@dust/programs": "https://pkg.pr.new/dustproject/dust/@dust/programs@ec20311",
    "@dust/world": "https://pkg.pr.new/dustproject/dust/@dust/world@ec20311",
    "@latticexyz/cli": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/entrykit": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/schema-type": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/store": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/world": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/world-consumer": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/world-module-metadata": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@openzeppelin/contracts": "^4.9.6",
    "solady": "^0.1.14"
  },
  "devDependencies": {
    "@types/big-json": "^3.2.5",
    "@types/node": "^22.15.19",
    "big-json": "^3.2.0",
    "forge-std": "github:foundry-rs/forge-std#77041d2ce690e692d6e03cc812b57d1ddaa4d505",
    "prettier": "3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "shx": "^0.4.0",
    "solhint": "^3.6.2",
    "solhint-config-mud": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "solhint-plugin-mud": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "viem": "^2.33.0"
  }
}
